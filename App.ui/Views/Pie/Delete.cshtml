@model DeletePieViewModel
<form asp-action="Delete" asp-controller="Pie" method="post" class="form-horizontal" role="form">
    <h4>Delete Pie.</h4>

    



    <input type="hidden" asp-for="PieId" value="@Model.PieId" />


    <div class="form-group">
        <label asp-for="CategoryName" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <div class="form-control" >@Model.CategoryName</div>
            
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Name" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <div class="form-control">@Model.Name</div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Delete" />
        </div>
    </div>
</form>
