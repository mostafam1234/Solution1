@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManger;




@if (SignInManger.IsSignedIn(User))
{
    <li class="nav-item">
        <form method="post" asp-action="LogOut" asp-controller="Account">
            <button type="submit" class="nav-link btn btn btn-link py-0 text-dark " style="width:auto">
                Logout @User.Identity.Name
            </button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a asp-action="Register" asp-controller="Account" class="nav-link text-dark">Register</a>

    </li>
    <li class="nav-item">
        <a asp-action="LogIn" asp-controller="Account" class="nav-link text-dark">LogIn</a>

    </li>

}










